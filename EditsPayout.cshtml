

@model IEnumerable<EventMgmt.Models.Payout>
@using EventMgmt.Models;


@{
    ViewBag.Title = "CreatePayout";
    Layout = "~/Views/Shared/_Layout.cshtml";

    UsersContext db = new UsersContext();
    var dtls = db.events.ToList();

}

<h2>EditsPayout</h2>
{
  <div class="content-page">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12 col-lg-12">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between">
                            <div class="header-title">
                                <h4 class="card-title">Enter Payout Details</h4>
                            </div>
                        </div>
                        <div class="card-body">
@using (Html.BeginForm("EditsPayout", "home", FormMethod.Post, new { enctype = "multipart/Form-Data" })) {
     
                            foreach (var items in Model) { 
                            <form>
                                <div class="form-row">
                                    <a href="@Url.Action("ShowsPayout","home")" class="btn btn-primary" style="margin-left:800px;margin-bottom:20px;">Show Payout</a>
                                    

                                    <div class="col-md-6 mb-3">
                                        <label for="validationDefaultUsername">Amount</label>
                                        <div class="input-group">

                                            <input type="text" class="form-control" name="amount" value="@items.amount"
                                                   
                                                   id="validationDefaultUsername" aria-describedby="inputGroupPrepend2" required>
                                        </div>
                                    </div>

                                    <div class="col-md-6 mb-4">

                                        <div class="input-group-prepend">
                                            <label for="validationDefault01">EventName</label>
                                        </div>
                                        <select class="custom-select" name="eventid" id="inputGroupSelect01" required>


                                            <option selected value="">Choose...</option>
                                            @foreach (var item in dtls)
                                            {
                                                <option value="@item.eventid">@item.title</option>
                                            }
                                        </select>
                                    </div>

                                    <div class="card-body">

                                        <div class="form-group row align-items-center">
                                            <div class="col-sm-3 col-4">
                                                <label class="col-form-label">Purpose</label>
                                            </div>
                                            <div class="col-sm-9 col-8">
                                                <textarea class="form-control" name="Purpose" id="horizontalTextarea" rows="3" placeholder="Textarea">@items.purpose</textarea>
                                            </div>
                                        </div>
                                    </div>



                                </div>










                                    <div class="form-group">
                                        <button class="btn btn-primary" type="submit">UPDATE</button>
                                    </div>
                            </form>
                            }
}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>












